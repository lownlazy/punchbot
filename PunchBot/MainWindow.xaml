<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:toolkit="http://schemas.microsoft.com/wpf/2008/toolkit"
        xmlns:chartingToolkit="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit" x:Class="PunchBot.MainWindow"
        Title="MainWindow" Height="700" Width="900">

    <Grid >
        <chartingToolkit:Chart  Name="lineChart" Title="Line Series Demo" VerticalAlignment="Top" Margin="0,0,0,0" Height="559"  >
            <chartingToolkit:LineSeries  DependentValuePath="Value" IndependentValuePath="Key" ItemsSource="{Binding Points }" IsSelectionEnabled="True"/>
        </chartingToolkit:Chart>
        <Button Content="load sample" Height="23" HorizontalAlignment="Left" Margin="538,564,0,0" Name="button1" VerticalAlignment="Top" Width="75" Click="button1_Click" />
        <TextBox Name="textBox1" HorizontalAlignment="Left" Height="92" Margin="618,567,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="264" />
    </Grid>
</Window>
